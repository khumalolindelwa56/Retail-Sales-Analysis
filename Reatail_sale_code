SELECT *
FROM workspace.public.sales_case_study
LIMIT 10;

SELECT 
    `Date`,
    DAYNAME(`Date`) AS day_name,
    MONTHNAME(`Date`) AS month_name,
    Sales,
    `Quantity Sold`,
    ROUND(Sales / `Quantity Sold`, 2) AS daily_sales_price_per_unit,
    `Cost Of Sales`,
    ROUND(((Sales - `Cost Of Sales`) / `Quantity Sold`) / (Sales / `Quantity Sold`) * 100, 2) AS daily_gross_profit_percent_per_unit,
    ROUND(SUM(Sales) OVER () / SUM(`Quantity Sold`) OVER (), 2) AS avg_unit_sales_price
FROM workspace.public.sales_case_study;
